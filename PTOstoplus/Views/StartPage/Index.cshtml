<style>
    :root {
        --primary-color: #2c3e50;
        --accent-color: #3498db;
        --bg-light: #f4f7f6;
        --text-dark: #333;
        --white: #ffffff;
    }

    body {
        margin: 0;
        padding: 0;
    }

    .main-wrapper {
