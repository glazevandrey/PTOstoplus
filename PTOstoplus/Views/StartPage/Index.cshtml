        color: var(--text-dark);
        line-height: 1.6;
        background-color: var(--bg-light);
        padding: 20px;
        min-height: 100vh;
        box-sizing: border-box;
    }

    .container {
        max-width: 900px;
        margin: 0 auto;
        background: var(--white);
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    }

    h1 { color: var(--primary-color); font-size: 24px; margin-bottom: 10px; line-height: 1.3; }
    h2 { color: var(--accent-color); font-size: 18px; margin-top: 0; }
    h3 { border-bottom: 2px solid var(--bg-light); padding-bottom: 10px; margin-top: 30px; }

    .booking-card {
        background: linear-gradient(135deg, #fff8e1 0%, #fffde7 100%);
        border-left: 5px solid #ffc107;
        padding: 25px;
        margin: 30px 0;
        border-radius: 8px;
        text-align: center;
    }

    .phone-numbers {
        font-size: 22px;
        color: #d32f2f;
        font-weight: bold;
        display: block;
        margin-top: 10px;
    }

    .table-responsive {
        width: 100%;
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
    }

    .price-table {
        width: 100%;
        min-width: 500px;
        border-collapse: collapse;
        margin: 20px 0;
        border-radius: 8px;
    }

    .price-table th {
        background-color: var(--primary-color);
        color: white;
        padding: 12px;
        text-align: left;
    }

    .price-table td {
        padding: 12px;
        border-bottom: 1px solid #eee;
    }

    .price-table tr:hover { background-color: #f9f9f9; }

    .docs-list {
        background: #e3f2fd;
        padding: 20px 20px 20px 40px;
        border-radius: 8px;
        list-style-type: none;
    }

    .docs-list li { margin-bottom: 10px; }
    .docs-list li::before {
        content: "✓";
        color: var(--accent-color);
        font-weight: bold;
        margin-right: 10px;
    }

    .links-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 15px;
        margin-top: 20px;
    }

    .btn-link {
        display: block;
        text-decoration: none;
        color: var(--primary-color);
        background: #eee;
        padding: 12px;
        border-radius: 6px;
        font-size: 14px;
        transition: all 0.3s ease;
        text-align: center;
        border: 1px solid #ddd;
    }

    .btn-link:hover {
        background: var(--accent-color);
        color: white;
        transform: translateY(-2px);
    }

    .img-main {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 20px 0;
    }

    .map-container {
        position: relative;
        padding-bottom: 56.25%; /* 16:9 */
        height: 0;
        overflow: hidden;
        border-radius: 8px;
        margin-top: 20px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    .map-container iframe {
        position: absolute;
        top: 0;
        left: 0;
        width: 100% !important;
        height: 100% !important;
        border: 0;
    }

    @@media (max-width: 768px) {
        .main-wrapper {
            padding: 10px;
        }
        
        .container {
            padding: 20px;
            width: auto;
        }

        h1 { font-size: 20px; }
        .phone-numbers { font-size: 18px; word-break: break-all; }
        
        .booking-card {
            padding: 15px;
            margin: 20px 0;
        }
        
        .docs-list {
            padding-left: 20px;
        }
        
        .links-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
